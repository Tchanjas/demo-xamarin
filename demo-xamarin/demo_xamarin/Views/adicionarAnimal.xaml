<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo_xamarin.Views.adicionarAnimal"
             Title="Adicionar Animal">
    <StackLayout x:Name="addAnimais">
        <Entry x:Name="Nome" Placeholder="Nome"></Entry>
        <Entry x:Name="Especie" Placeholder="Especie"></Entry>
        <Entry x:Name="Raca" Placeholder="Raca"></Entry>
        <Entry x:Name="Peso" Placeholder="Peso"></Entry>
        <Entry x:Name="Altura" Placeholder="Altura"></Entry>
        
        <Button Text="Enviar" Clicked="addAnimal"></Button>
    </StackLayout>
</ContentPage>
    